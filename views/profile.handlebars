<script>

  
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1791323147839783',
      cookie     : true,  // enable cookies to allow the server to access 
                          // the session
      xfbml      : true,  // parse social plugins on this page
      version    : 'v2.8' // use graph api version 2.8
    });


    FB.getLoginStatus(function(response) {
      getImg();
      name();
    });

  };

  // Load the SDK asynchronously
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "https://connect.facebook.net/en_US/sdk.js";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));

  // gets image and then renders the FB on the page
    function getImg() {
      FB.api('/me', 'GET', {fields: 'first_name,last_name,name,id'}, function(response) {

        $.get("/api/getImg/"+ response.id, function(data){

          document.getElementById("profilePic").setAttribute("src", data);
        })
      });
    }
    
    function name() {
      FB.api('/me', 'GET', {fields: 'first_name,last_name,name,id'}, function(response) {

        $.get("/api/checkUser/"+ response.id, function(data){
            console.log(data);
            var date = data.createdAt;
            var format = "";
            	for (var i = 0; i < 10; i++) {
				var num = date.charAt(i);
				format = format + num;
				}
			var final = format.split("-");
			console.log(final);
          document.getElementById('userName').innerHTML = data.userName;
          document.getElementById('date').innerHTML = "Join Community On: " + final[1].toString() + "-" + final[2].toString() + "-" + final[0].toString();
        })
      });
    }

    function getHelp() {
    	$.get("/threads/modal", function(data){
       window.location.replace("/threads/modal");
    	})
    }

    function goHelp() {
      $.get("/threads", function(data){
       window.location.replace("/threads");
      })
    }
</script>


